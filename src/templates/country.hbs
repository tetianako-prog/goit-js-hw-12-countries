<h1 class="country-title">{{name}}</h1>
<div class="row">
  <div class="column">
    <p class="text"><b>Capital:</b> {{capital}}</p>
    <p class="text"><b>Population:</b> {{population}}</p>
    <p class="text"><b>Languages</b></p>
    <ul>
      {{#each languages}}
      <li>{{name}}</li>
      {{/each}}
    </ul>
  </div>
  <div class="column">
    <img src="{{flag}}" alt="" width="350">
  </div>
</div>